# PRODUCTION .env.example - Copy this to .env and update values
# Django settings
SECRET_KEY=your-super-secret-key-must-be-at-least-50-characters-long-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database (PostgreSQL)
DB_NAME=stocksubscription
DB_USER=your_db_user
DB_PASSWORD=secure_database_password
DB_HOST=localhost
DB_PORT=5432

# Celery & Redis
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email settings (Production SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# External APIs
OPENAI_API_KEY=your-openai-api-key-here

# CORS (Production - specific domains only)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com